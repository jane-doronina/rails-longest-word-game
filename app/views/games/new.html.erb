<div class="container">
  <h1 class="mt-5 mb-4">New Game</h1>
  <div class="inline mb-5">
  <% @letters.each do |letter| %>
  <div class="letter-button"><%= letter %></div>
  <% end %>
  </div>

  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group">
      <input class="form-control" type="text" name="word">
      <input type="hidden" name="grid" value="<%= @letters.join %>">
      <input class="btn btn-outline-secondary" type="submit" value="Play">
    </div>
  </form>
</div>
